# vim: set ft=yaml expandtab tabstop=2 shiftwidth=2 softtabstop=2:
web1:
  name: ikdashboard
  php_version: 5.3.8
  document_root: /app/webroot
  before_deploy:
    - "mkdir -p app/tmp/cache/models"
    - "mkdir app/tmp/cache/persistent"
    - "mkdir app/tmp/cache/views"
    - "mkdir app/tmp/logs"
    - "mkdir app/tmp/sessions"
    - "mkdir app/tmp/tests"
    - "app/Console/cake Migrations.migration all"
  after_build:
    - "mv app/Config/database.php.pagoda app/Config/database.php"
    - "mv app/Config/core.php.pagoda app/Config/core.php"
  shared_writable_dirs:
    - app/tmp
    - app/tmp/cache
    - app/tmp/cache/models
    - app/tmp/cache/persistent
    - app/tmp/cache/views
    - app/tmp/logs
    - app/tmp/sessions
    - app/tmp/tests
    - app/webroot/img
    - app/webroot/img/publics
  php_extensions:
    - mcrypt
    - mbstring
    - pdo_mysql
    - apc
    - curl

db1:
  name: shanto
  type: mysql